{
    "manifest_version": 3,
    "name": "YouTube Blocker",
    "version": "1.0.0",
    "description": "Block access to YouTube and track access attempts",
    "permissions": [
        "storage",
        "webRequest",
        "tabs"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "blocked.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}